@using System.Web.Mvc.Html

@model Forte.Styleguide.MvcPartialComponentViewModel

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name - Style Guide</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    @if (Model.Error != null)
    {
        <pre>@Model.Error</pre>
    }
    else
    {
        foreach (var variant in @Model.Variants)
        {
            <div style="padding: 20px; margin: 20px; border-bottom: 2px solid black">
                @Html.Partial(@Model.PartialName, variant.Model)
            </div>
        }
    }
</body>
</html>
