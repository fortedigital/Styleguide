@using System.Web.Mvc.Html

@model Styleguide.PartialComponentViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Style Guide</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>

    <div class="Page Page__layout">
        <div class="Page__container">
            @foreach (var item in @Model.Items)
            {
                <div style="padding: 20px; margin: 20px; border-bottom: 2px solid black">
                    @Html.Partial(@Model.Name, item)
                </div>
            }

        </div>
    </div>
</body>
</html>
